/**app.wxss**/

page {
    height: 100%;
}
.container {
    height: 100%;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    background-color: #eee;
}
.container:before {
    content: '';
    display: table;
}


/* 公共样式 */
.col{
  display: flex;
  flex-direction: column;
}

.row{
  display: flex;
  flex-direction: row;
}

.BGColor1 {
    background-color: #1e88e5;
}

.BGColor2 {
    background-color: rgb(144, 202, 249);
}

.colorWhite {
    color: #fff;
}

.colorGray {
    color: #ccc;
}

.overflow_ellipsis {
    display: inline-block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

input.active {
    border-color: #1e88e5;
}

.detail-box {
  margin: 20rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 6rpx 0 #999;
  overflow: hidden;
}

.flexRow {
    display: flex;
}
.flex {
    flex: 1;
}
.textCenter {
    text-align: center;
}